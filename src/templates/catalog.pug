                .offer-form__info
                  .offer-form__item-wrap.offer-form__phone-wrap
                    .offer-form__info-label Звоните
                    a.phone__number.offer-form__phone(href="tel:84955971939") 8 (495) 597-19-39
                  .offer-form__item-wrap.offer-form__email-wrap
                    .offer-form__info-label Пишите
                    a.offer-form__email(href="mailto:info@orbis-style.ru") info@orbis-style.ru
                form.form-offer__form
