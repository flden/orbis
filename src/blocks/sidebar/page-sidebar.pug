mixin sidebar(homepage)
  .sidebar__container
    if homepage
      .sidebar.sidebar--top.sidebar--top-fixed
        .sidebar__wrap
          .sidebar__logo
            include ../logo/logo
       
          nav.sidebar__nav
            ul
              li Продукция
                ul
                  li
                    a(href="/") Карнизы
                  li
                    a(href="/") Аксессуары
              li О компании
                ul
                  li
                    a(href="/") О нас
                  li
                    a(href="/") Производство
              li
                a(href="/") Партнёрам
              li
                a(href="/") Новости и статьи
              li
                a(href="/") Контакты

